{
  "name": "restaurante-ai-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=4096 next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:start": "docker-compose up -d postgres redis",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d postgres redis",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "db:setup": "node scripts/setup-database.js",
    "db:test": "node scripts/test-migration.js",
    "db:test-connection": "node scripts/test-supabase-connection.js",
    "db:setup-supabase": "node scripts/setup-supabase.js",
    "db:fix-passwords": "node scripts/fix-password-hashes.js",
    "create-admin": "node scripts/create-admin.js",
    "setup-demo": "node scripts/setup-demo-users.js",
    "setup:db": "node scripts/setup-production.js",
    "setup:config": "node scripts/setup-production-config.js",
    "production:start": "NODE_ENV=production pm2 start ecosystem.config.js",
    "production:build": "NODE_ENV=production npm run build",
    "production:deploy": "./deploy.sh",
    "production:stop": "pm2 stop restaurante-ai-platform",
    "production:restart": "pm2 restart restaurante-ai-platform",
    "production:logs": "pm2 logs restaurante-ai-platform",
    "production:monitor": "pm2 monit",
    "load-test": "node scripts/load-test.js",
    "load-test:heavy": "CONCURRENT_RESTAURANTS=50 REQUESTS_PER_RESTAURANT=20 node scripts/load-test.js",
    "load-test:stress": "CONCURRENT_RESTAURANTS=100 REQUESTS_PER_RESTAURANT=50 node scripts/load-test.js",
    "db:migrate": "node scripts/migrate-production.js",
    "db:seed": "node scripts/seed-production.js",
    "db:optimize": "node scripts/optimize-database.js",
    "monitor:start": "node scripts/monitor.js",
    "monitor:alerts": "node scripts/check-alerts.js",
    "analytics:clear": "curl -X POST http://localhost:3000/api/analytics/clear-cache",
    "alerts:check": "curl http://localhost:3000/api/alerts?restaurantId=rest_001",
    "health:check": "curl http://localhost:3000/api/health",
    "health:detailed": "curl -X POST http://localhost:3000/api/health -H 'Authorization: Bearer $ADMIN_TOKEN'",
    "rate-limit:stats": "curl http://localhost:3000/api/admin/rate-limit-stats",
    "rate-limit:clear": "curl -X POST http://localhost:3000/api/admin/rate-limit-clear"
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-toast": "^1.2.15",
    "@sentry/nextjs": "^10.11.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "airtable": "^0.12.2",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "googleapis": "^160.0.0",
    "ioredis": "^5.7.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "luxon": "^3.7.2",
    "msw": "^2.11.2",
    "next": "15.5.3",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "openai": "^4.67.3",
    "pg": "^8.16.3",
    "rate-limiter-flexible": "^7.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "redis": "^5.8.2",
    "sonner": "^2.0.7",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.3.1",
    "twilio": "^5.9.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "critters": "^0.0.23",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
